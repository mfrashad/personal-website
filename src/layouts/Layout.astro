---
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import { SEO } from 'astro-seo';
import MobileMenu from '@components/MobileMenu.astro';
import DistortFilter from '@components/DistortFilter.astro';
import PageLoader from '@components/animations/PageLoader';

interface Props {
    title: string;
    description?: string;
    ogimageName?: string;
    showLoader?: boolean;
}

const { title, description, ogimageName, showLoader = false } = Astro.props;
const adjustedTitle = title ? 'Rashad' + ' â€“ ' + title : 'Rashad';
const adjustedDescription = description ? description : 'AI engineer, entrepreneur, and speaker. Co-founder & CTO at Cleve, building AI-powered tools for 100K+ users. Delivered 20+ talks on AI, technology, and career development.';

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();
const imageFileName = ogimageName ? `/opengraph/${ogimageName}` : '/opengraph.png';
const resolvedImageWithDomain = new URL(imageFileName, Astro.site).toString();
---

<!doctype html>
<html lang="en" class="overscroll-none overflow-x-hidden">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={adjustedDescription} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
        <link rel="manifest" href="/site.webmanifest" />
        <meta name="generator" content={Astro.generator} />
        <title>{adjustedTitle}</title>

        <!-- Analytics -->
        <script src="/iamrobin/js/script.js" data-api="/iamrobin/api/event" data-domain="mfrashad.com"
        ></script>

        <!-- Google Analytics -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=UA-128948221-2"></script>
        <script is:inline>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());
            gtag('config', 'UA-128948221-2');
        </script>
        <SEO
            title={adjustedTitle}
            description={adjustedDescription}
            canonical={canonicalURL}
            openGraph={{
                basic: {
                    url: canonicalURL,
                    type: 'website',
                    title: title,
                    image: resolvedImageWithDomain
                },
                image: {
                    alt: 'Rashad - AI engineer, entrepreneur, and speaker'
                }
            }}
        />
        <ViewTransitions />
        <style is:global>
            /* Loading bar styles */
            .loading-bar {
                position: fixed;
                top: 0;
                left: 0;
                width: 0;
                height: 3px;
                background: linear-gradient(90deg, #3b82f6, #8b5cf6, #ec4899);
                z-index: 9999;
                transition: width 0.3s ease-out;
                opacity: 0;
            }
            .loading-bar.active {
                opacity: 1;
            }
        </style>
        <script>
            document.addEventListener('astro:before-preparation', () => {
                const bar = document.querySelector('.loading-bar');
                if (bar) {
                    bar.classList.add('active');
                    bar.style.width = '30%';
                }
            });

            document.addEventListener('astro:page-load', () => {
                const bar = document.querySelector('.loading-bar');
                if (bar) {
                    bar.style.width = '100%';
                    setTimeout(() => {
                        bar.classList.remove('active');
                        bar.style.width = '0';
                    }, 300);
                }
            });
        </script>
    </head>
    <body class="min-h-[calc(100vh-56px)] overflow-x-hidden">
        <div class="loading-bar"></div>
        {showLoader && <PageLoader client:load />}
        <Header />
        <MobileMenu />
        <slot />
        <Footer />
        <DistortFilter />
    </body>
</html>
