---
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import '../styles/theme.css';
import { SEO } from 'astro-seo';
import MobileMenu from '@components/MobileMenu.astro';
import DistortFilter from '@components/DistortFilter.astro';
import PageLoader from '@components/animations/PageLoader';
import { QuantumPulseLoader } from '@components/ui/quantum-pulse-loader';

interface Props {
    title: string;
    description?: string;
    ogimageName?: string;
    showLoader?: boolean;
}

const { title, description, ogimageName, showLoader = false } = Astro.props;
const adjustedTitle = title ? 'Rashad' + ' â€“ ' + title : 'Rashad';
const adjustedDescription = description ? description : 'AI engineer, entrepreneur, and speaker. Co-founder & CTO at Cleve, building AI-powered tools for 100K+ users. Delivered 20+ talks on AI, technology, and career development.';

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();
const imageFileName = ogimageName ? `/opengraph/${ogimageName}` : '/opengraph.png';
const resolvedImageWithDomain = new URL(imageFileName, Astro.site).toString();
---

<!doctype html>
<html lang="en" class="overscroll-none overflow-x-hidden">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={adjustedDescription} />
        <meta name="viewport" content="width=device-width" />
        <!-- Theme initialization - must be inline and blocking to prevent flash -->
        <script is:inline>
            (function() {
                const stored = localStorage.getItem('theme');
                const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
                const isDark = stored === 'dark' || (stored === 'system' && prefersDark);
                if (isDark) {
                    document.documentElement.classList.add('dark');
                }
            })();
        </script>
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
        <link rel="manifest" href="/site.webmanifest" />
        <meta name="generator" content={Astro.generator} />
        <title>{adjustedTitle}</title>

        <!-- Analytics -->
        <script src="/iamrobin/js/script.js" data-api="/iamrobin/api/event" data-domain="mfrashad.com"
        ></script>

        <!-- Google Analytics -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=UA-128948221-2"></script>
        <script is:inline>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());
            gtag('config', 'UA-128948221-2');
        </script>
        <SEO
            title={adjustedTitle}
            description={adjustedDescription}
            canonical={canonicalURL}
            openGraph={{
                basic: {
                    url: canonicalURL,
                    type: 'website',
                    title: title,
                    image: resolvedImageWithDomain
                },
                image: {
                    alt: 'Rashad - AI engineer, entrepreneur, and speaker'
                }
            }}
        />
        <ViewTransitions />
        <style is:global>
            /* Full-screen loading overlay */
            .page-loading-overlay {
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: var(--color-bg-overlay);
                backdrop-filter: blur(12px);
                z-index: 99999;
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                opacity: 0;
                pointer-events: none;
                transition: opacity 0.3s ease-in-out;
            }

            .page-loading-overlay.active {
                opacity: 1;
                pointer-events: all;
            }

            /* Progress bar at top */
            .loading-progress-bar {
                position: absolute;
                top: 0;
                left: 0;
                height: 3px;
                background: linear-gradient(90deg, #3b82f6, #8b5cf6, #ec4899);
                width: 0;
                transition: width 0.3s ease-out;
            }
        </style>
        <script>
            let navigationStartTime = 0;

            document.addEventListener('astro:before-preparation', () => {
                navigationStartTime = Date.now();
                const overlay = document.querySelector('.page-loading-overlay');
                const progressBar = overlay?.querySelector('.loading-progress-bar');

                if (overlay) {
                    overlay.classList.add('active');
                }

                if (progressBar) {
                    progressBar.style.width = '30%';
                }
            });

            document.addEventListener('astro:page-load', () => {
                const overlay = document.querySelector('.page-loading-overlay');
                const progressBar = overlay?.querySelector('.loading-progress-bar');

                if (progressBar) {
                    progressBar.style.width = '100%';
                }

                // Ensure minimum loading time of 200ms for visibility
                const elapsedTime = Date.now() - navigationStartTime;
                const minLoadingTime = 200;
                const remainingTime = Math.max(0, minLoadingTime - elapsedTime);

                setTimeout(() => {
                    if (overlay) {
                        overlay.classList.remove('active');
                        // Reset progress bar after fade out
                        setTimeout(() => {
                            if (progressBar) {
                                progressBar.style.width = '0';
                            }
                        }, 200);
                    }
                }, remainingTime);
            });
        </script>
    </head>
    <body class="min-h-[calc(100vh-56px)] overflow-x-hidden bg-surface-primary text-content-body">
        <!-- Full-screen loading overlay for page transitions -->
        <div class="page-loading-overlay">
            <div class="loading-progress-bar"></div>
            <QuantumPulseLoader client:only="react" />
        </div>

        {showLoader && <PageLoader client:load />}
        <Header />
        <MobileMenu />
        <slot />
        <Footer />
        <DistortFilter />
    </body>
</html>
