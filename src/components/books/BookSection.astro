---
import SectionContent from '@components/SectionContent.astro';
import { getReadBooks, getCurrentlyReading } from 'src/api/hardcover';
import YearlyBookSlider from './YearlyBookSlider';
import InlineLink from '@components/InlineLink.astro';

export interface Author {
    name: string;
}

export interface Book {
    title: string;
    cover: string;
    pageCount: number;
    id: string;
    slug: string;
    authors: Author[];
    currentlyReading?: boolean;
    review?: {
        id: string;
        rating: number;
        spoiler: boolean;
        text: string;
        createdAt: string;
        updatedAt: string;
        tags: any[];
    } | null;
}

export interface Shelf {
    title: string;
    books: Book[];
}

let shelfData: any[] = [];
let yearlyShelfData: any[] = [];

try {
    // Fetch books from Hardcover API (already grouped by year)
    const shelves = await getReadBooks();
    shelfData = Array.isArray(shelves) ? shelves : [];

    // Ensure shelfData is an array before filtering
    if (Array.isArray(shelfData)) {
        yearlyShelfData = shelfData.filter((shelf: any) => shelf?.title?.startsWith('20'));
    } else {
        yearlyShelfData = [];
    }

    // Get currently reading books
    const currentlyReadingBooks = await getCurrentlyReading();

    // Add currently reading books to current year shelf
    if (currentlyReadingBooks && currentlyReadingBooks.length > 0) {
        const currentYear = new Date().getFullYear().toString();
        let currentYearShelf = shelfData.find((shelf: Shelf) => shelf.title === currentYear);

        if (!currentYearShelf) {
            currentYearShelf = { title: currentYear, books: [] };
            shelfData.unshift(currentYearShelf);
            yearlyShelfData.unshift(currentYearShelf);
        }

        // Add currently reading books to the beginning of current year
        currentlyReadingBooks.forEach((book: Book) => {
            currentYearShelf!.books.unshift(book);
        });
    }
} catch (error) {
    console.error('Failed to fetch book data:', error);
}
---

<div>
    <SectionContent title="Books">
        I would like to read more books. Keeping a list of all the books I've read and enjoyed will
        hopefully help me do that. Each book links to its corresponding page on the awesome book
        platform <InlineLink external href="https://hardcover.app">Hardcover</InlineLink>.
    </SectionContent>
    <YearlyBookSlider
        shelfs={yearlyShelfData}
        gardenBookEntries={[]}
        client:load
    />
</div>
