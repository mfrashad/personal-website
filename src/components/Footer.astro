---
import Grid from './Grid.astro';
import GridBox from './GridBox.astro';
import { Icon } from 'astro-icon/components';
---

<footer
    class="sticky top-[100vh] pb-28 pt-12 brightness-95 transition duration-300 md:py-12"
    style="background-color: var(--active-bg-color);"
>
    <Grid>
        <GridBox desktopFull>
            <!-- Main Footer Content -->
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
                <!-- About Column -->
                <div class="md:col-span-1">
                    <h3 class="font-bold text-sm mb-3">Rashad</h3>
                    <p class="text-xs text-content-muted mb-4">
                        ML engineer, co-founder & CTO at Cleve. Speaker on AI, tech, and career development.
                    </p>
                    <!-- Social Links -->
                    <div class="flex gap-3">
                        <a href="https://twitter.com/rashadventure" target="_blank" rel="noopener noreferrer" class="text-content-muted hover:text-content-body transition-colors">
                            <Icon name="ph:x-logo" width={18} height={18} />
                        </a>
                        <a href="https://instagram.com/rashadventure" target="_blank" rel="noopener noreferrer" class="text-content-muted hover:text-content-body transition-colors">
                            <Icon name="ph:instagram-logo" width={18} height={18} />
                        </a>
                        <a href="https://tiktok.com/@rashadventure" target="_blank" rel="noopener noreferrer" class="text-content-muted hover:text-content-body transition-colors">
                            <Icon name="ph:tiktok-logo" width={18} height={18} />
                        </a>
                        <a href="https://medium.com/@rashadventure" target="_blank" rel="noopener noreferrer" class="text-content-muted hover:text-content-body transition-colors">
                            <Icon name="ph:medium-logo" width={18} height={18} />
                        </a>
                        <a href="https://github.com/mfrashad" target="_blank" rel="noopener noreferrer" class="text-content-muted hover:text-content-body transition-colors">
                            <Icon name="ph:github-logo" width={18} height={18} />
                        </a>
                        <a href="https://linkedin.com/in/mfathyrashad" target="_blank" rel="noopener noreferrer" class="text-content-muted hover:text-content-body transition-colors">
                            <Icon name="ph:linkedin-logo" width={18} height={18} />
                        </a>
                    </div>
                </div>

                <!-- Content Column -->
                <div>
                    <h3 class="font-bold text-sm mb-3">Content</h3>
                    <ul class="space-y-2 text-xs">
                        <li><a href="/blog" class="text-content-muted hover:text-content-body transition-colors">Blog</a></li>
                        <li><a href="/garden" class="text-content-muted hover:text-content-body transition-colors">Garden</a></li>
                        <li><a href="/books" class="text-content-muted hover:text-content-body transition-colors">Books</a></li>
                        <li><a href="/speaking" class="text-content-muted hover:text-content-body transition-colors">Speaking</a></li>
                        <li><a href="/topics" class="text-content-muted hover:text-content-body transition-colors">Topics</a></li>
                        <li><a href="/bookmarks" class="text-content-muted hover:text-content-body transition-colors">Bookmarks</a></li>
                    </ul>
                </div>

                <!-- About Column -->
                <div>
                    <h3 class="font-bold text-sm mb-3">About</h3>
                    <ul class="space-y-2 text-xs">
                        <li><a href="/about" class="text-content-muted hover:text-content-body transition-colors">About</a></li>
                        <li><a href="/now" class="text-content-muted hover:text-content-body transition-colors">Now</a></li>
                        <li><a href="/achievements" class="text-content-muted hover:text-content-body transition-colors">Achievements</a></li>
                        <li><a href="/lists" class="text-content-muted hover:text-content-body transition-colors">Lists</a></li>
                        <li><a href="/media" class="text-content-muted hover:text-content-body transition-colors">Media</a></li>
                    </ul>
                </div>

                <!-- Other Column -->
                <div>
                    <h3 class="font-bold text-sm mb-3">Other</h3>
                    <ul class="space-y-2 text-xs">
                        <li><a href="/movies" class="text-content-muted hover:text-content-body transition-colors">Movies</a></li>
                        <li><a href="/postcards" class="text-content-muted hover:text-content-body transition-colors">Postcards</a></li>
                        <li><a href="/colophon" class="text-content-muted hover:text-content-body transition-colors">Colophon</a></li>
                        <li><a href="/changelog" class="text-content-muted hover:text-content-body transition-colors">Changelog</a></li>
                        <li><a href="/legal" class="text-content-muted hover:text-content-body transition-colors">Legal</a></li>
                    </ul>
                </div>
            </div>

            <!-- Bottom Bar -->
            <div class="pt-6 border-t border-border">
                <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-3 text-xs text-content-muted">
                    <p>
                        Â© <span id="copyright-year"></span> Muhammad Fathy Rashad
                    </p>
                    <a href="https://github.com/mfrashad/personal-website" target="_blank" rel="noopener noreferrer" class="hover:text-neutral-900 transition-colors">
                        View source code
                    </a>
                </div>
            </div>
        </GridBox>
    </Grid>
</footer>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const copyrightYear = document.getElementById('copyright-year');
        if (copyrightYear) copyrightYear.textContent = new Date().getFullYear().toString();
    });
</script>
