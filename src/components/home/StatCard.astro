---
import { Icon } from 'astro-icon/components';

interface Props {
    icon: string;
    value: string | number;
    label: string;
    iconColor?: string;
}

const { icon, value, label, iconColor = 'text-neutral-800' } = Astro.props;
---

<div class="stat-card group relative rounded-lg border border-neutral-200 bg-white p-6 transition-all duration-300 hover:shadow-lg hover:border-neutral-300">
    <div class="flex items-start justify-between">
        <div class="flex-1">
            <div class="text-4xl font-bold text-neutral-900 mb-2">
                {value.toLocaleString()}
            </div>
            <div class="text-sm text-neutral-600 font-mono">
                {label}
            </div>
        </div>
        <div class={`${iconColor} transition-transform duration-300 group-hover:scale-110`}>
            <Icon name={icon} width={32} height={32} />
        </div>
    </div>
</div>

<style>
    .stat-card {
        min-height: 120px;
    }
</style>
