---
/**
 * Draft
 * Mark sections as draft/work-in-progress
 * Visual indicator that content is not final
 */

interface Props {
    className?: string;
}

const { className = '' } = Astro.props;
---

<div
    class={`draft my-6 p-5 bg-yellow-light border-2 border-dashed border-yellow rounded-lg ${className}`}
>
    <div class="flex items-start gap-3">
        <span class="text-2xl flex-shrink-0" aria-hidden="true">✏️</span>
        <div class="flex-1">
            <h4 class="text-lg font-bold text-yellow-dark mb-2">Draft</h4>
            <div class="prose prose-sm text-neutral-700">
                <slot />
            </div>
        </div>
    </div>
</div>
