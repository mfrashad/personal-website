---
/**
 * Coming Soon
 * Placeholder for unfinished sections
 * Useful for publishing incomplete notes while indicating WIP status
 */

interface Props {
    text?: string;
    className?: string;
}

const { text = 'This section is coming soon...', className = '' } = Astro.props;
---

<div
    class={`coming-soon my-8 p-6 bg-neutral-100 border-2 border-dashed border-neutral-300 rounded-lg text-center ${className}`}
>
    <div class="flex flex-col items-center gap-3">
        <span class="text-4xl" aria-hidden="true">ðŸš§</span>
        <p class="text-neutral-600 font-medium">{text}</p>
        {
            Astro.slots.has('default') && (
                <div class="text-sm text-neutral-500 mt-2">
                    <slot />
                </div>
            )
        }
    </div>
</div>
